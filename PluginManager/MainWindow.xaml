<Window x:Class="PluginManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plugin Manager" Height="700" Width="1000"
        Background="#1E1E1E" Foreground="#E0E0E0"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="BgDark" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="BgLighter" Color="#252526"/>
        <SolidColorBrush x:Key="Accent" Color="#007ACC"/>
        <SolidColorBrush x:Key="AccentHover" Color="#009DFF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#3E3E42"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444444"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource BgLighter}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,1,0">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="SCAN PATHS" Foreground="#AAAAAA" FontSize="12" FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBox x:Name="TxtPaths" Grid.Row="1" AcceptsReturn="True" 
                         TextWrapping="NoWrap" VerticalScrollBarVisibility="Auto"
                         ToolTip="One path per line"
                         FontFamily="Consolas" FontSize="12"/>

                <StackPanel Grid.Row="2" Margin="0,15,0,0">
                    <Button x:Name="BtnScan" Content="START SCAN" Click="BtnScan_Click" Background="{StaticResource Accent}" Height="40"/>
                    <TextBlock x:Name="LblStatus" Text="Ready." Foreground="Gray" Margin="0,10,0,0" TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,15">
                <TextBlock Text="EXPORT:" VerticalAlignment="Center" Foreground="#AAAAAA" Margin="0,0,10,0"/>
                <Button Content="CSV" Click="BtnExportCSV_Click" Margin="0,0,10,0" Width="60"/>
                <Button Content="MD Table" Click="BtnExportMD_Click" Margin="0,0,10,0" Width="80"/>
                <Button Content="TXT List" Click="BtnExportTXT_Click" Width="80"/>
            </StackPanel>

            <DataGrid x:Name="GridPlugins" Grid.Row="1" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#3E3E42"
                      Background="Transparent"
                      RowBackground="Transparent"
                      Foreground="#DDDDDD"
                      BorderThickness="0"
                      RowHeight="35">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#1E1E1E"/>
                        <Setter Property="Foreground" Value="#AAAAAA"/>
                        <Setter Property="Padding" Value="10,0,0,0"/>
                        <Setter Property="Height" Value="30"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                    </Style>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#333333"/>
                                <Setter Property="Foreground" Value="{StaticResource Accent}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="NAME" Binding="{Binding Name}" Width="2*"/>
                    <DataGridTextColumn Header="FORMATS" Binding="{Binding Formats}" Width="2*"/>
                    <DataGridTextColumn Header="UPDATED" Binding="{Binding LastUpdatedStr}" Width="1*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>